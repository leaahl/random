<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <img class="card-img-top" src="https://pbs.twimg.com/profile_images/2845868549/3ff0552fc3d5cd7a8da59a83b30eda78_400x400.jpeg" alt="Card image cap">
        <div class="card-body">
          <p class="card-text"><%= listing.title %></p>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <button type="button" class="btn btn-sm btn-outline-secondary">
                <%= link_to "View", listing_path(listing) %> </button>
              </button>

              <button type="button" class="btn btn-sm btn-outline-secondary">
                <%= link_to "Edit", edit_listing_path(listing) %> </button>
            </div>
            <small class="text-muted">9 mins</small>
              <%= time_ago_in_words(listing.created_at) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path %>
