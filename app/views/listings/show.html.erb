
<div class="container">
  <h1><%= @listing.title %></h1>
    <div class="row">
      <div class="col">
        <% @listing.images.each do |image| %>
        <%= link_to image_tag(image.url(:thumb)), image.url, target: :_blank %>
      <% end %>
        <p> <%= @listing.description %> </p>
      </div>
  <div class="col">
    <% unless @listing.active %>
    <p>
      <strong>SOLD!</strong>
    </p>
  <% end %>

  <p>
    <strong>Description:</strong>
    <%= @listing.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @listing.price %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= @listing.brand %>
  </p>

  <p>
    <strong>Condition:</strong>
    <%= @listing.condition %>
  </p>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %> |
<%= link_to 'Destroy', @listing, method: :delete, data: {confirm: 'Are you sure?'} %>
